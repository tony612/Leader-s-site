= form_for @bill, :html => {:class => "ym-form ym-full ym-g38"} do |f|
  - if @bill.errors.any?
    #error_explanation
      h2 = "#{pluralize(@bill.errors.count, "error")} prohibited this bill from being saved:"
      ul
        - @bill.errors.full_messages.each do |message|
          li = message

  .ym-fbox-text
    = f.label :our_no
    = f.text_field :our_no
  .ym-fbox-text
    = f.label :intl_no
    = f.text_field :intl_no
  .ym-fbox-text
    = f.label :tracking_no
    = f.text_field :tracking_no
  .ym-fbox-text
    = f.label :goal
    = f.text_field :goal
  .ym-fbox-text
    = f.label :number
    = f.number_field :number
  .ym-fbox-select
    = f.label :local_time
    = f.datetime_select :local_time
  .ym-fbox-text
    = f.label :new_status
    = f.text_field :new_status
  .ym-fbox-text
    = f.label :url
    = f.text_field :url
  .ym-fbox-button = f.submit 'Save'
