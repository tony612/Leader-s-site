header
    = image_tag  "header.jpg", class: 'header'
    #cssmenu
      ul
        .pull-right
          - if signed_in?
            li = link_to current_user do
              = current_user.username
            - if current_user.ability 'bills'
              li = link_to admin_bills_path do
                span 运单
            - if current_user.ability 'users'
              li = link_to admin_users_path do
                span 用户
            - if current_user.ability 'quoted_prices'
              li = link_to admin_quoted_prices_path do
                span 报价表
            li = link_to "登出", logout_path, :method => :delete
          - else
            li = link_to login_path do
              span 登录
            li = link_to new_user_path do
              span 注册
        li = link_to root_path do
          span 首页
        li = link_to static_pages_products_path do
          span 产品
        li = link_to news_index_path do
          span 新闻中心
        li = link_to static_pages_about_path do
          span 关于我们
        li = link_to search_quoted_prices_path do
          span 查询价格
        /ul.pull-right
        

